@import 'nib'
vendor-prefixes ?= webkit moz official

dark_blue = #005F6B
gris = #0a0a0a
gris-c = #f5f5f5
gris-t = #515050
negro = #080808
t-black = rgba(0,0,0, .8)
t-white = rgba(255, 255, 255, .8)

*
	border 0
	margin 0
	padding 0

*::-webkit-scrollbar
	background-color gris-c
	height 6px
	width 6px
	&-track
		background-color transparent
	&-thumb
		background-color gris

@-webkit-keyframes arriba {
  0% {
    opacity 0
    top -9em
  }
  50% {
  	opacity 0
  }
  100% {
  	opacity 1
    top .01em
  }
}

body
	color gris
	font-family Times New Roman
	
nav
	background #efefef
	display block
	position relative
	ul 
		text-align center
		li
			display inline-block
			padding 15px 0
			a
				color gris-t
				cursor: pointer
				font-size 11px
				letter-spacing 5px
				padding 15px 20px
				text-decoration none
				text-transform uppercase
				&:hover
					border-bottom 2px solid gris
					color black
footer
	background negro
	color white
	margin-top 30px
	overflow hidden
	text-align center
	.down
		padding 20px
	.f-info
		font-size 11px
		letter-spacing 5px
		text-transform uppercase
	iframe
		width 100%
		
.menu
	background negro
	padding 30px
	text-align center
	&-cont
		display block
		left 0
		overflow hidden
		position relative
		top 0
		width 100%

	h4
		color white
		font-weight normal
		letter-spacing 15px
		text-transform uppercase
		
.carousel
	background url('../img/library.jpg') no-repeat center center
	background-size cover
	background-attachment fixed
	display block
	font-style italic
	height 450px
	margin-bottom 30px
	overflow-x auto
	overflow-y hidden
	position relative
	white-space no-wrap
	width 100%
	&-desc h4
		border-bottom 1px solid
		letter-spacing 3px
		margin-bottom 30px
		padding-bottom 5px
		text-align center
		text-transform uppercase
					
	&-img
		position relative
		img
			width 100%
.desc
	background t-white
	bottom 0
	display inline-block
	height 370px
	max-height 370px
	min-height 370px
	padding 40px
	position relative
	vertical-align top
	width 300px
	white-space initial
	z-index 1
	&:nth-child(even)
		background t-black
		color white
	p
		text-align justify
		
.container
	padding-top 50px
	text-align justify
	margin 0 auto
	max-width 1200px
	overflow hidden
	width 70%
	
.content
	float right
	display inline-block
	width 70%
	
.info
	background gris-c
	padding 40px
	font-style italic
	line-height 24px
	&-block 
		margin-bottom 30px
		position relative
		overflow hidden
		h4
			border-bottom 1px solid gris
			letter-spacing 5px
			margin 0 auto
			margin-bottom 20px
			padding-bottom 10px
			text-align center
			text-transform uppercase
			width 45%
.left
	float left
	width 48%
	div
		padding 30px
.right
	float right
	width 48%
	div
		padding 30px
		min-height 192px

.escudo
	background url('../img/escudo.png') no-repeat center center
	background-size contain
	height 200px
	margin-bottom 30px
	position relative
	width auto
	
.desde-arriba
	-moz-animation 2s arriba
	-webkit-animation 2s arriba
	animation 2s arriba
	

